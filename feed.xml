      var tip = document.createElement(&quot;div&quot;);
      tip.style.textAlign = &quot;center&quot;;
      tip.style.color = &quot;#c00&quot;;
      tip.style.fontSize = &quot;1em&quot;;
      tip.style.margin = &quot;16px 0&quot;;
      tip.innerText = &quot;请使用其他浏览器或在电脑端打开以显示短片&quot;;
      video.parentNode.insertBefore(tip, video);
    });
  }
&lt;/script&gt;</content>

      
      
      
      
      

